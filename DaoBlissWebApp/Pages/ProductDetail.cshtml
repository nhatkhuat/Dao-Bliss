@page
@model DaoBlissWebApp.Pages.ProductDetailModel
@{
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <title>
            DaoBliss Product Page
        </title>
        <script src="https://cdn.tailwindcss.com">
        </script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&amp;family=Roboto&amp;display=swap" rel="stylesheet" />
        <style>
            body {
                font-family: "Roboto", sans-serif;
            }

            .font-playfair {
                font-family: "Playfair Display", serif;
            }
        </style>
    </head>
    <body class="bg-white">
        <!-- Header -->
        <header class="bg-[url('/images/background.jpg')] bg-cover bg-no-repeat">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between py-4 border-b border-[#3f5a4f]">
                    <!-- Logo -->
                    <div class="flex flex-col">
                        <!-- Hàng ngang gồm logo và DaoBliss -->
                        <div class="flex items-baseline space-x-2">
                            <img src="/img/DaoBlissLogo.png"
                                 alt="Logo"
                                 class="h-10 w-auto align-baseline" />

                            <span class="text-white text-[36px] font-playfair leading-none align-baseline"
                                  style="font-family: 'Garlic Salt Regular'">
                                DaoBliss
                            </span>
                        </div>


                        <!-- Slogan phía dưới -->
                        <p class="text-white text-[14px] font-serif leading-tight mt-0" style="font-family: SVN-Valentina">
                            Gìn giữ tinh túy núi rừng.
                        </p>
                    </div>

                    <!-- Thanh tìm kiếm -->
                    <form class="relative flex-1 max-w-xl mx-6" role="search">
                        <input class="w-full rounded-full border border-[#ddb25a] bg-[#f9f5f0] py-2 pr-10 pl-4 text-[#7a6a5a] placeholder-[#bba87a] focus:outline-none focus:ring-2 focus:ring-[#ddb25a] focus:border-[#ddb25a] text-sm"
                               placeholder="Tìm kiếm sản phẩm, bài viết,..." type="search" />

                        <button type="submit"
                                class="absolute right-3 top-1/2 -translate-y-1/2 text-[#7a6a5a] hover:text-[#ddb25a]"
                                aria-label="Tìm kiếm">
                            <i class="fas fa-search fa-lg"></i>
                        </button>
                    </form>


                    <!-- Nút giỏ hàng và thương -->
                    <div class="flex items-center space-x-4">
                        <button aria-label="Giỏ hàng" class="text-[#f9f5f0] hover:text-[#ddb25a] text-xl">
                            <i class="fas fa-shopping-cart"></i>
                        </button>
                        <button aria-label="Thương" class="bg-[#a06f1a] text-[#f9f5f0] rounded-full px-4 py-1 text-sm font-semibold flex items-center space-x-2">
                            <img alt="Hình ảnh con mèo" class="w-6 h-6 rounded-full object-cover" src="https://storage.googleapis.com/a1aa/image/5fb5e5b5-0bc8-4c28-acd5-381c4abfd4f2.jpg" />
                            <span>User</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Menu -->
            <nav>
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <ul class="flex justify-center space-x-10 text-[#f9f5f0] text-base font-normal py-3">
                        <li><a href="#" class="hover:text-[#ddb25a]">Trang chủ</a></li>
                        <li><a href="#" class="hover:text-[#ddb25a]">Về chúng tôi</a></li>
                        <li><a href="#" class="hover:text-[#ddb25a]">Mua sắm</a></li>
                        <li><a href="#" class="hover:text-[#ddb25a]">Blog</a></li>
                        <li><a href="#" class="hover:text-[#ddb25a]">Liên hệ</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Main content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-10 mb-20">
            <div class="flex flex-col md:flex-row md:space-x-16 items-center md:items-start">
                <div class="w-full md:w-1/2 rounded-lg overflow-hidden">
                    <img alt="Two DaoBliss products with green labels and bamboo wooden lids on white background" class="w-full h-auto rounded-lg object-cover" height="400" src="/images/product.png" width="600" />
                </div>
                <div class="w-full md:w-1/2 mt-8 md:mt-0">
                    <h1 class="font-playfair text-4xl text-black mb-3 leading-tight" style="line-height: 1.1">
                        Sản phẩm 1
                    </h1>
                    <div class="flex space-x-2 mb-2">
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                    </div>
                    <a class="text-xs text-blue-600 font-semibold mb-3 inline-block" href="#">
                        Xem các phản hồi về sản phẩm
                    </a>
                    <p class="text-gray-500 text-sm mb-3 leading-relaxed">
                        Mô tả cho sản phẩm 1. Gồm các thông tin về nguồn gốc, thành phần,
                        cách sử dụng,...
                        <br />
                        Các thông tin khác có thể về chính sách bán hàng, chính sách bảo
                        mật,...
                    </p>
                    <div class="flex space-x-2 mb-4">
                        <span class="text-xs text-gray-400 bg-gray-300 rounded-full px-3 py-1 select-none">
                            150ml
                        </span>
                        <span class="text-xs text-white bg-[#1f3a2d] rounded-full px-3 py-1 select-none">
                            250ml
                        </span>
                    </div>
                    <p class="text-2xl font-playfair mb-4">
                        149.000 VNĐ
                    </p>
                    <div class="mb-6">
                        <label class="block mb-1 text-lg font-normal text-black" for="quantity">
                            Số lượng:
                        </label>
                        <div class="inline-flex items-center space-x-3 bg-gray-300 rounded-full px-3 py-1 text-black font-semibold select-none">
                            <button aria-label="Decrease quantity" class="bg-gray-500 text-white rounded-full w-6 h-6 flex items-center justify-center">
                                <i class="fas fa-minus">
                                </i>
                            </button>
                            <span class="text-lg">
                                01
                            </span>
                            <button aria-label="Increase quantity" class="bg-gray-500 text-white rounded-full w-6 h-6 flex items-center justify-center">
                                <i class="fas fa-plus">
                                </i>
                            </button>
                        </div>
                    </div>
                    <div class="flex space-x-4">
                        <button class="flex items-center space-x-2 bg-[#1f3a2d] text-white rounded-full px-6 py-2 font-playfair text-lg hover:bg-[#163022] transition">
                            <span>
                                Thêm vào
                            </span>
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>
                        <button class="bg-[#1f3a2d] text-white rounded-full px-6 py-2 font-playfair text-lg hover:bg-[#163022] transition">
                            Mua ngay
                        </button>
                    </div>
                </div>
            </div>
            <!-- Related products -->
            <section class="mt-16">
                <h2 class="text-xl font-semibold mb-6">
                    Related products
                </h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                    <article class="rounded-md overflow-hidden">
                        <img alt="DaoBliss Nat Blase Facial &amp; Soap Box and Jar with walnuts on dark green background" class="w-full h-auto object-cover rounded-md" height="250" src="/images/product.png" width="400" />
                        <div class="mt-2 text-sm text-black font-playfair">
                            <h3 class="mb-1">
                                Sản phẩm 2
                            </h3>
                            <p class="text-gray-500 mb-1">
                                Mô tả cho sản phẩm 2
                            </p>
                            <p>
                                120.000 VNĐ
                            </p>
                        </div>
                    </article>
                    <article class="rounded-md overflow-hidden">
                        <img alt="DaoBliss Nat Blase Facial &amp; Soap Box and Jar with walnuts on dark green background" class="w-full h-auto object-cover rounded-md" height="250" src="/images/product.png" width="400" />
                        <div class="mt-2 text-sm text-black font-playfair">
                            <h3 class="mb-1">
                                Sản phẩm 2
                            </h3>
                            <p class="text-gray-500 mb-1">
                                Mô tả cho sản phẩm 2
                            </p>
                            <p>
                                120.000 VNĐ
                            </p>
                        </div>
                    </article>
                    <article class="rounded-md overflow-hidden">
                        <img alt="DaoBliss Nat Blase Facial &amp; Soap Box and Jar with walnuts on dark green background" class="w-full h-auto object-cover rounded-md" height="250" src="/images/product.png" width="400" />
                        <div class="mt-2 text-sm text-black font-playfair">
                            <h3 class="mb-1">
                                Sản phẩm 2
                            </h3>
                            <p class="text-gray-500 mb-1">
                                Mô tả cho sản phẩm 2
                            </p>
                            <p>
                                120.000 VNĐ
                            </p>
                        </div>
                    </article>
                </div>
            </section>
        </main>
        <!-- Footer -->
        <footer class="bg-[url('/images/background.jpg')] bg-cover bg-no-repeat">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-1 sm:grid-cols-4 gap-8">
                <div class="space-y-2">
                    <div class="flex flex-col">
                        <!-- Hàng ngang gồm logo và DaoBliss -->
                        <div class="flex items-baseline space-x-2">
                            <img src="/img/DaoBlissLogo.png"
                                 alt="Logo"
                                 class="h-10 w-auto align-baseline" />

                            <span class="text-white text-[36px] font-playfair leading-none align-baseline"
                                  style="font-family: 'Garlic Salt Regular'">
                                DaoBliss
                            </span>
                        </div>


                        <!-- Slogan phía dưới -->
                        <p class="text-white text-[14px] font-serif leading-tight mt-0" style="font-family: SVN-Valentina">
                            Gìn giữ tinh túy núi rừng.
                        </p>
                    </div>
                    <div class="flex space-x-4 text-gray-400 text-sm mt-3">
                        <a aria-label="Facebook" class="hover:text-[#daa520]" href="#">
                            <i class="fab fa-facebook-f">
                            </i>
                        </a>
                        <a aria-label="LinkedIn" class="hover:text-[#daa520]" href="#">
                            <i class="fab fa-linkedin-in">
                            </i>
                        </a>
                        <a aria-label="YouTube" class="hover:text-[#daa520]" href="#">
                            <i class="fab fa-youtube">
                            </i>
                        </a>
                        <a aria-label="Instagram" class="hover:text-[#daa520]" href="#">
                            <i class="fab fa-instagram">
                            </i>
                        </a>
                    </div>
                </div>
                <div>
                    <h3 class="text-[#ddb25a] font-semibold mb-3">
                        Trang
                    </h3>
                    <ul class="space-y-2 text-white">
                        <li>
                            <a class="hover:text-[#ddb25a] focus:text-[#ddb25a] focus:outline-none" href="#">
                                Trang chủ
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-[#ddb25a] focus:text-[#ddb25a] focus:outline-none" href="#">
                                Về chúng tôi
                            </a>
                        </li>
                        <li>
                            <a class="hover:text-[#ddb25a] focus:text-[#ddb25a] focus:outline-none" href="#">
                                Mua sắm
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-[#ddb25a] font-semibold mb-3">
                        Cửa hàng của chúng tôi
                    </h3>
                    <ul class="space-y-2 text-white">
                        <li>
                            Chính sách bảo mật
                        </li>
                        <li>
                            Điều khoản và Điều kiện
                        </li>
                        <li>
                            Trung tâm hỗ trợ
                        </li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-[#ddb25a] font-semibold mb-3">
                        Liên hệ
                    </h3>
                    <address class="not-italic space-y-2 text-white">
                        <p>
                            Số 5, đường Cầu Giấy, Quan Hoa, Hà Nội
                        </p>
                        <p>
                            daobliss@gmail.com
                        </p>
                        <p>
                            034 356 4378
                        </p>
                    </address>
                </div>
            </div>
        </footer>
    </body>
    </html>

}
