@page
@model DaoBlissWebApp.Pages.ProductDetailModel
@{ViewData["Title"] = "Về chúng tôi";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    }
    <html lang="vi">
        <head>
            <meta charset="utf-8" />
            <meta content="width=device-width, initial-scale=1" name="viewport" />
            <title>
                DaoBliss Product Page
            </title>
            <script src="https://cdn.tailwindcss.com">
            </script>
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
            <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&amp;family=Roboto&amp;display=swap" rel="stylesheet" />
            <style>
                body {
                    font-family: "Roboto", sans-serif;
                }

                .font-playfair {
                    font-family: "Playfair Display", serif;
                }
            </style>
            <script src="https://cdn.botpress.cloud/webchat/v3.2/inject.js" defer></script>
            <script src="https://files.bpcontent.cloud/2025/07/11/08/20250711083358-FVA851WT.js" defer></script>

        </head>
    <body class="bg-white">
        
        <!-- Main content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-10 mb-20">
            <div class="flex flex-col md:flex-row md:space-x-16 items-center md:items-start">
                <div class="w-full md:w-1/2 rounded-lg overflow-hidden">
                    <img alt="Two DaoBliss products with green labels and bamboo wooden lids on white background" class="w-full h-auto rounded-lg object-cover" height="400" src="/images/product.png" width="600" />
                </div>
                <div class="w-full md:w-1/2 mt-8 md:mt-0">
                    <h1 class="font-playfair text-4xl text-black mb-3 leading-tight" style="line-height: 1.1">
                        Cao tắm cô đặc
                    </h1>
                    <div class="flex space-x-2 mb-2">
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                        <i class="fas fa-star text-yellow-400 text-3xl">
                        </i>
                    </div>
                    <a class="text-xs text-blue-600 font-semibold mb-3 inline-block" href="#">
                        Xem các phản hồi về sản phẩm
                    </a>
                    <p class="text-gray-500 text-sm mb-3 leading-relaxed">
                        Mô tả cho sản phẩm 1. Gồm các thông tin về nguồn gốc, thành phần,
                        cách sử dụng,...
                        <br />
                        Các thông tin khác có thể về chính sách bán hàng, chính sách bảo
                        mật,...
                    </p>
                    <div class="flex space-x-2 mb-4">
                        <span class="text-xs text-gray-400 bg-gray-300 rounded-full px-3 py-1 select-none">
                            150ml
                        </span>
                        <span class="text-xs text-white bg-[#1f3a2d] rounded-full px-3 py-1 select-none">
                            250ml
                        </span>
                    </div>
                    <p class="text-2xl font-playfair mb-4">
                        149.000 VNĐ
                    </p>
                    <div class="mb-6">
                        <label class="block mb-1 text-lg font-normal text-black" for="quantity">
                            Số lượng:
                        </label>
                        <div class="inline-flex items-center space-x-3 bg-gray-300 rounded-full px-3 py-1 text-black font-semibold select-none">
                            <button aria-label="Decrease quantity" class="bg-gray-500 text-white rounded-full w-6 h-6 flex items-center justify-center">
                                <i class="fas fa-minus">
                                </i>
                            </button>
                            <span class="text-lg">
                                01
                            </span>
                            <button aria-label="Increase quantity" class="bg-gray-500 text-white rounded-full w-6 h-6 flex items-center justify-center">
                                <i class="fas fa-plus">
                                </i>
                            </button>
                        </div>
                    </div>
                    <div class="flex space-x-4">
                        <button class="flex items-center space-x-2 bg-[#1f3a2d] text-white rounded-full px-6 py-2 font-playfair text-lg hover:bg-[#163022] transition">
                            <span>
                                Thêm vào
                            </span>
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>
                        <button class="bg-[#1f3a2d] text-white rounded-full px-6 py-2 font-playfair text-lg hover:bg-[#163022] transition">
                            Mua ngay
                        </button>
                    </div>
                </div>
            </div>
            <!-- Related products -->
            <section class="mt-16">
                <h2 class="text-xl font-semibold mb-6">
                    Related products
                </h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                    <article class="rounded-md overflow-hidden">
                        <img alt="DaoBliss Nat Blase Facial &amp; Soap Box and Jar with walnuts on dark green background" class="w-full h-auto object-cover rounded-md" height="250" src="/images/product.png" width="400" />
                        <div class="mt-2 text-sm text-black font-playfair">
                            <h3 class="mb-1">
                                Sản phẩm 2
                            </h3>
                            <p class="text-gray-500 mb-1">
                                Mô tả cho sản phẩm 2
                            </p>
                            <p>
                                120.000 VNĐ
                            </p>
                        </div>
                    </article>
                    <article class="rounded-md overflow-hidden">
                        <img alt="DaoBliss Nat Blase Facial &amp; Soap Box and Jar with walnuts on dark green background" class="w-full h-auto object-cover rounded-md" height="250" src="/images/product.png" width="400" />
                        <div class="mt-2 text-sm text-black font-playfair">
                            <h3 class="mb-1">
                                Sản phẩm 2
                            </h3>
                            <p class="text-gray-500 mb-1">
                                Mô tả cho sản phẩm 2
                            </p>
                            <p>
                                120.000 VNĐ
                            </p>
                        </div>
                    </article>
                    <article class="rounded-md overflow-hidden">
                        <img alt="DaoBliss Nat Blase Facial &amp; Soap Box and Jar with walnuts on dark green background" class="w-full h-auto object-cover rounded-md" height="250" src="/images/product.png" width="400" />
                        <div class="mt-2 text-sm text-black font-playfair">
                            <h3 class="mb-1">
                                Sản phẩm 2
                            </h3>
                            <p class="text-gray-500 mb-1">
                                Mô tả cho sản phẩm 2
                            </p>
                            <p>
                                120.000 VNĐ
                            </p>
                        </div>
                    </article>
                </div>
            </section>
        </main>
        
    </body>
    </html>
