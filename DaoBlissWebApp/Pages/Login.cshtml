@page

@model DaoBlissWebApp.Pages.LoginModel
@{
}
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>
        Login
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&amp;family=Roboto&amp;display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', serif;
        }

        .font-playfair {
            font-family: 'Playfair Display', serif;
        }

    </style>
</head>
<body class="min-h-screen flex flex-col">
    <div class="flex flex-1">
        <!-- Left side -->
        <div class="hidden md:flex flex-col justify-center items-start w-1/2 bg-[#1b3a2a] relative">
            <img alt="Illustration of a woman in traditional clothes holding a basket with plants and flowers, standing next to tall plants and orange flowers on a dark green patterned background"
                 class="absolute left-0 top-0 h-screen w-auto object-cover" height="800"
                 src="~/img/DaoblissLogin.jpg" />
            <div class="z-10 text-left text-white max-w-xs ml-auto pr-8">
                <div class="flex justify-start items-center space-x-2 mb-2">
                    <img alt="Golden leaf logo icon" class="w-10 h-10" height="40" 
                         src="/img/DaoBlissLogo.png" width="40" style="width: 102px; 
height: 119.6px; transform: translate(-52px, 0px); position: relative; left: 47px; top: -17px;">
                    <h1 class="font-playfair text-5xl font-normal leading-tight">
                        DaoBliss
                    </h1>
                </div>
                <p class="font-playfair text-white text-2xl mb-8">
                    Gìn giữ tinh túy núi rừng
                </p>
                <button class="bg-[#a9742f] text-white rounded-full px-8 py-3 text-lg font-playfair hover:bg-[#8c6325] transition" type="button" style="position: relative; left: 127px; top: -15px;">
                    Về trang chủ
                </button>
            </div>
            <div class="absolute bottom-0 left-0 w-full h-4 bg-[#a9742f]">
            </div>
        </div>

        <!-- Right side -->
        <div class="flex flex-col justify-center items-center w-full md:w-1/2 bg-white relative px-8 py-16">
            <h2 class="font-playfair text-[#1b3a2a] text-5xl mb-8">
                Đăng Nhập
            </h2>
            <form class="w-full max-w-sm space-y-4" method="post" asp-page="homepage">
                <div>
                    <label class="block mb-1 text-[#1b3a2a] text-base font-normal" for="username">
                        Tài khoản:
                    </label>
                    <input class="w-full rounded-full bg-gray-300 h-10 px-4 text-[#1b3a2a] focus:outline-none" id="username" type="text" />
                </div>
                <div>
                    <label class="block mb-1 text-[#1b3a2a] text-base font-normal" for="password">
                        Mật khẩu:
                    </label>
                    <input class="w-full rounded-full bg-gray-300 h-10 px-4 text-[#1b3a2a] focus:outline-none" id="password" type="password" />
                </div>
                <div class="text-right">
                    <a class="text-blue-600 text-sm" href="#">
                        Quên mật khẩu?
                    </a>
                </div>
                <button class="w-full bg-[#1b3a2a] text-white rounded-full py-3 text-lg font-playfair hover:bg-[#16301f] transition" type="submit">
                    Đăng nhập
                </button>
            </form>
            <p class="mt-4 text-[#1b3a2a] text-center text-base max-w-sm">
                Bạn chưa phải thành viên?
                <a class="text-blue-600" href="#">
                    Đăng ký ngay!
                </a>
            </p>
            <div class="mt-2 text-[#1b3a2a] text-center text-base max-w-sm">
                Hoặc đăng ký với
                <button type="button" class="earth-social" style="pointer-events: auto; opacity: 1;">
                    <div class="social-earth"></div>
                    <img alt="Google logo with blue, red, yellow and green colors" class="inline-block ml-1 align-middle" height="24" src="https://storage.googleapis.com/a1aa/image/fd576044-8e47-4f3c-80e4-4561bcedec9d.jpg" width="80" />

                    <span>Google</span>
                </button>     
            </div>
            
        </div>
    </div>
</body>

</html>
