                <img src="https://readdy.ai/api/search-image?query=dao%20ethnic%20woman%20with%20beautiful%20long%20black%20hair%20using%20natural%20herbal%20products%20peaceful%20mountain%20background%20traditional%20beauty%20ritual%20serene%20atmosphere&width=400&height=500&seq=7&orientation=portrait"
                     alt="Vẻ đẹp tự nhiên" class="w-full h-96 object-cover rounded-xl">
            </div>
        </div>
    </div>
</section>
<section class="py-20 bg-yellow-50">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Blog & Văn Hóa</h2>
            <p class="text-xl text-gray-600">Khám phá văn hóa và bí quyết làm đẹp truyền thống của người Dao đỏ</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            @{
                int max = Model.Articles.Count > 2 ? 3 : Model.Articles.Count;
            }

            @for (int i = 0; i < max; i++)
            {
                Article art = Model.Articles[i];
                string imgUrl = art.ImageUrl ?? "";
                <a asp-page="BlogDetail" asp-route-slug="@art.Slug" class="group" data-aos="fade-up" data-aos-delay="@((i+1)*100)">
                    <div class="bg-white rounded-xl overflow-hidden shadow-lg transition-transform group-hover:-translate-y-1">
                        <img src="@imgUrl"
                             alt="Văn hóa người Dao" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary">@art.Title</h3>
                            <p class="text-gray-600 text-sm line-clamp-2">@art.Summary</p>
                        </div>
                    </div>
                </a>
            }

        </div>
        <div class="text-center mt-12">
            <a asp-page="Blogs" class="inline-flex items-center space-x-2 text-primary hover:text-green-700 transition-colors">
                <span class="font-semibold">Xem tất cả bài viết</span>
                <i class="ri-arrow-right-line"></i>
            </a>
        </div>
    </div>
</section>
