    <script id="cart-functionality">
        document.addEventListener('DOMContentLoaded', function() {
            const quantityButtons = document.querySelectorAll('.grid button');
            const removeButtons = document.querySelectorAll('[class*="ri-close-line"]');

            quantityButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const isAdd = this.querySelector('.ri-add-line');
                    const isSubtract = this.querySelector('.ri-subtract-line');
                    const quantitySpan = isAdd ? this.previousElementSibling : this.nextElementSibling;

                    if (quantitySpan && quantitySpan.tagName === 'SPAN') {
                        let currentQuantity = parseInt(quantitySpan.textContent);

                        if (isAdd) {
                            currentQuantity++;
                        } else if (isSubtract && currentQuantity > 1) {
                            currentQuantity--;
                        }

                        quantitySpan.textContent = currentQuantity.toString().padStart(2, '0');
                    }
                });
            });

            removeButtons.forEach(button => {
                if (button.closest('.grid')) {
                    button.addEventListener('click', function() {
                        const row = this.closest('.grid');
                        if (row && row.classList.contains('grid-cols-5')) {
                            row.remove();
                        }
                    });
                }
            });
        });
    </script>

    <script id="payment-selection">
        document.addEventListener('DOMContentLoaded', function() {
            const radioInputs = document.querySelectorAll('input[name="payment"]');
            const radioContainers = document.querySelectorAll('input[name="payment"] + div');

            function updateRadioDisplay() {
                radioInputs.forEach((input, index) => {
                    const circle = radioContainers[index].querySelector('div');
                    if (input.checked) {
                        circle.classList.remove('hidden');
                        radioContainers[index].classList.add('border-primary');
                        radioContainers[index].classList.remove('border-gray-300');
                    } else {
                        circle.classList.add('hidden');
                        radioContainers[index].classList.remove('border-primary');
                        radioContainers[index].classList.add('border-gray-300');
                    }
                });
            }

            radioInputs.forEach(input => {
                input.addEventListener('change', updateRadioDisplay);
            });

            updateRadioDisplay();
        });
