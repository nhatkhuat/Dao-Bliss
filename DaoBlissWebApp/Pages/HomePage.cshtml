@page
@model DaoBlissWebApp.Pages.HomePageModel
@{
}
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>
        DaoBliss
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&amp;family=Roboto&amp;display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>

        header {
            background-image: url('/img/DaoblissBackground.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: top;
        }

        body {
            font-family: "Roboto", sans-serif;
            background-color: #f9f8f0;
            color: #1f3a2f;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Playfair Display", serif;
        }
        /* Custom scrollbar for slider arrows */
        .slick-arrow {
            background: transparent !important;
            color: white !important;
            font-size: 1.5rem;
        }

        footer {
            background-image: url('/img/DaoblissBackground.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: bottom;
        }
    </style>
</head>
<body class="relative">
    <header class="bg-[url('/images/background.jpg')] bg-cover bg-no-repeat">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between py-4 border-b border-[#3f5a4f]">
                <!-- Logo -->
                <div class="flex flex-col">
                    <!-- Hàng ngang gồm logo và DaoBliss -->
                    <div class="flex items-baseline space-x-2">
                        <img src="/img/DaoBlissLogo.png"
                             alt="Logo"
                             class="h-10 w-auto align-baseline" />

                        <span class="text-white text-[36px] font-playfair leading-none align-baseline"
                              style="font-family: 'Garlic Salt Regular'">
                            DaoBliss
                        </span>
                    </div>


                    <!-- Slogan phía dưới -->
                    <p class="text-white text-[14px] font-serif leading-tight mt-0" style="font-family: SVN-Valentina">
                        Gìn giữ tinh túy núi rừng.
                    </p>
                </div>
                <!-- Thanh tìm kiếm -->
                <form class="relative flex-1 max-w-xl mx-6" role="search">
                    <input class="w-full rounded-full border border-[#ddb25a] bg-[#f9f5f0] py-2 pr-10 pl-4 text-[#7a6a5a] placeholder-[#bba87a] focus:outline-none focus:ring-2 focus:ring-[#ddb25a] focus:border-[#ddb25a] text-sm"
                           placeholder="Tìm kiếm sản phẩm, bài viết,..." type="search" />

                    <button type="submit"
                            class="absolute right-3 top-1/2 -translate-y-1/2 text-[#7a6a5a] hover:text-[#ddb25a]"
                            aria-label="Tìm kiếm">
                        <i class="fas fa-search fa-lg"></i>
                    </button>
                </form>


                <!-- Nút giỏ hàng và thương -->
                <div class="flex items-center space-x-4">
                    <button aria-label="Giỏ hàng" class="text-[#f9f5f0] hover:text-[#ddb25a] text-xl">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                    <button aria-label="Thương" class="bg-[#a06f1a] text-[#f9f5f0] rounded-full px-4 py-1 text-sm font-semibold flex items-center space-x-2">
                        <img alt="Hình ảnh con mèo" class="w-6 h-6 rounded-full object-cover" src="https://storage.googleapis.com/a1aa/image/5fb5e5b5-0bc8-4c28-acd5-381c4abfd4f2.jpg" />
                        <span>User</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Menu -->
        <nav>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <ul class="flex justify-center space-x-10 text-[#f9f5f0] text-base font-normal py-3">
                    <li><a href="#" class="hover:text-[#ddb25a]">Trang chủ</a></li>
                    <li><a href="#" class="hover:text-[#ddb25a]">Về chúng tôi</a></li>
                    <li><a href="#" class="hover:text-[#ddb25a]">Mua sắm</a></li>
                    <li><a href="#" class="hover:text-[#ddb25a]">Blog</a></li>
                    <li><a href="#" class="hover:text-[#ddb25a]">Liên hệ</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Hero slider -->
    <section class="relative max-w-7xl mx-auto mt-0">
        <img alt="Vietnamese woman in traditional dress sorting herbs in a large round bamboo basket outdoors" class="w-full object-cover max-h-[400px]" height="400" src="https://storage.googleapis.com/a1aa/image/139e5214-6ad7-4ac3-d51b-cd4635d799fb.jpg" width="1200" />
        <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/30 to-transparent flex flex-col align-items-start justify-center px-6 sm:px-12 max-w-7xl mx-auto" style="max-width: 1200px;">
            <h2 class="text-white font-playfair text-3xl sm:text-4xl max-w-lg leading-snug drop-shadow-md" style="font-family: SVN-Valentina">
                Từ núi rừng Tây Bắc
            </h2>
            <p class="text-white text-sm sm:text-base max-w-md drop-shadow-md mt-1">
                Cùng chúng tôi tìm hiểu câu chuyện văn hóa Việt Nam muôn màu...
            </p>
            <button class="w-auto inline-block bg-[#3a6a3a] text-white text-sm font-semibold px-2 py-2 rounded shadow hover:bg-[#2e4e2e] transition">
                Tìm hiểu ngay...
            </button>
        </div>
        <button aria-label="Previous slide" class="absolute top-1/2 left-2 -translate-y-1/2 text-white text-2xl opacity-70 hover:opacity-100">
            <i class="fas fa-chevron-left">
            </i>
        </button>
        <button aria-label="Next slide" class="absolute top-1/2 right-2 -translate-y-1/2 text-white text-2xl opacity-70 hover:opacity-100">
            <i class="fas fa-chevron-right">
            </i>
        </button>
    </section>
    <!-- Features bar -->
    <section class="bg-gradient-to-b from-[#1f3a2f] to-[#f9f8f0] max-w-7xl mx-auto px-6 sm:px-12 py-6 flex justify-around text-white text-sm font-serif" style="margin-top:0;">
        <div class="flex items-center space-x-2">
            <i class="far fa-credit-card text-lg">
            </i>
            <span>
                Thanh toán thuận tiện
            </span>
        </div>
        <div class="flex items-center space-x-2">
            <i class="fas fa-truck text-lg">
            </i>
            <span>
                Giao hàng tận nơi
            </span>
        </div>
        <div class="flex items-center space-x-2">
            <i class="fas fa-sync-alt text-lg">
            </i>
            <span>
                Hỗ trợ đổi trả
            </span>
        </div>
        <button aria-label="Chat hỗ trợ" class="fixed bottom-20 right-6 bg-[#9b7a2a] text-white rounded-full w-12 h-12 flex items-center justify-center shadow-lg hover:bg-[#7a5e1a] transition">
            <i class="fas fa-comment-alt">
            </i>
        </button>
    </section>
    <!-- Featured products -->
    <section class="max-w-7xl mx-auto px-6 sm:px-12 mt-8">
        <h3 class="text-2xl font-playfair mb-4">
            Sản phẩm nổi bật
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
            <article>
                <img alt="Two DaoBliss herbal jars with wooden lids on white background" class="w-full h-72 object-cover rounded" height="300" src="https://storage.googleapis.com/a1aa/image/a57184b0-5cc9-46c3-55d9-bcc53bc7d669.jpg" width="400" />
                <h4 class="mt-2 font-semibold text-base">
                    Cao tắm cô đặc
                </h4>
                <p class="text-sm text-[#4a4a4a] mt-1 font-serif">
                    Sản phẩm đặc trưng từ bài thuốc cổ truyền của người Dao Đỏ.
                </p>
            </article>
            <article>
                <img alt="DaoBliss green box and small jar of herbal foot soak product on dark green background" class="w-full h-72 object-cover rounded" height="300" src="https://storage.googleapis.com/a1aa/image/cda7cdfb-1731-4ee5-2a6b-8e3aea8216b5.jpg" width="400" />
                <h4 class="mt-2 font-semibold text-base">
                    Bột ngâm chân thảo dược
                </h4>
                <p class="text-sm text-[#4a4a4a] mt-1 font-serif">
                    Nguyên liệu được lấy từ các cây thuốc quý vùng Tây Bắc
                </p>
            </article>
            <article>
                <img alt="Gift box with DaoBliss products and flowers in sunlight on lace tablecloth" class="w-full h-72 object-cover rounded" height="300" src="https://storage.googleapis.com/a1aa/image/036cfb3f-2466-48a1-60ed-c737984999fa.jpg" width="400" />
                <h4 class="mt-2 font-semibold text-base">
                    Set quà “chữa lành”
                </h4>
                <p class="text-sm text-[#4a4a4a] mt-1 font-serif">
                    Bao gồm sản phẩm cùng quà tặng đi kèm, tiện lợi và lịch sự.
                </p>
            </article>
        </div>
    </section>
    <!-- Call to action -->
    <section class="max-w-7xl mx-auto px-6 sm:px-12 mt-12 flex flex-col lg:flex-row items-center gap-6">
        <div class="lg:w-1/2">
            <h3 class="text-2xl font-playfair mb-3">
                Hãy dùng thử ngay!
            </h3>
            <p class="text-sm font-serif text-[#1f3a2f] leading-relaxed">
                Bạn đắn đo về chất lượng của DaoBliss?
                <br />
                Giờ đây, sản phẩm dùng thử đã có mặt tại nhiều Spa đối tác, sẵn sàng để bạn
                trải nghiệm và cảm nhận hương thơm tự nhiên, sự thư giãn mà DaoBliss mang lại
                ngay từ lần đầu tiên.
            </p>
            <button class="mt-4 bg-[#3a6a3a] text-white text-sm font-semibold px-4 py-2 rounded shadow hover:bg-[#2e4e2e] transition">
                Tìm hiểu thêm...
            </button>
        </div>
        <div class="lg:w-1/2">
            <img alt="Wooden hot tub in spa room with plants and steam rising, natural light through window" class="rounded shadow-lg w-full object-cover max-h-[400px]" height="400" src="https://storage.googleapis.com/a1aa/image/b99d8077-20d1-4c4b-a06a-7d28925924a5.jpg" width="600" />
        </div>
    </section>
    <!-- Latest blog posts -->
    <section class="max-w-7xl mx-auto px-6 sm:px-12 mt-12 mb-12">
        <h3 class="text-2xl font-playfair mb-4">
            Bài viết mới nhất
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <article>
                <img alt="Green herbal leaves growing in soil closeup" class="w-full h-48 object-cover rounded" height="300" src="https://storage.googleapis.com/a1aa/image/bddfb948-84ff-4db7-e147-f0b33ec3b6ab.jpg" width="600" />
                <h4 class="mt-2 font-semibold text-base">
                    Hoàng Liên - Vị thuốc đáng nhất nhưng quý nhất
                </h4>
                <p class="text-sm text-[#4a4a4a] mt-1 font-serif">
                    Hoàng Liên là một trong những vị thuốc quý phát triển đặc biệt tốt trên dãy
                    Hoàng Liên Sơn...
                </p>
            </article>
            <article>
                <img alt="People in traditional clothes harvesting herbs in field" class="w-full h-48 object-cover rounded" height="300" src="https://storage.googleapis.com/a1aa/image/a34fe366-4c21-4d12-9078-c2d9a180770c.jpg" width="600" />
                <h4 class="mt-2 font-semibold text-base">
                    Giữ nghề làm thuốc nam của người Dao đỏ
                </h4>
                <p class="text-sm text-[#4a4a4a] mt-1 font-serif">
                    Với mong muốn những bài thuốc gia truyền của gia đình sẽ được kế nghiệp và phát
                    huy...
                </p>
            </article>
        </div>
    </section>
    <!-- Footer -->
    <footer class="bg-[url('/images/background.jpg')] bg-cover bg-no-repeat">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-1 sm:grid-cols-4 gap-8">
            <div class="space-y-2">
                <div class="flex flex-col">
                    <!-- Hàng ngang gồm logo và DaoBliss -->
                    <div class="flex items-baseline space-x-2">
                        <img src="/img/DaoBlissLogo.png"
                             alt="Logo"
                             class="h-10 w-auto align-baseline" />

                        <span class="text-white text-[36px] font-playfair leading-none align-baseline"
                              style="font-family: 'Garlic Salt Regular'">
                            DaoBliss
                        </span>
                    </div>


                    <!-- Slogan phía dưới -->
                    <p class="text-white text-[14px] font-serif leading-tight mt-0" style="font-family: SVN-Valentina">
                        Gìn giữ tinh túy núi rừng.
                    </p>
                </div>
                <div class="flex space-x-4 text-gray-400 text-sm mt-3">
                    <a aria-label="Facebook" class="hover:text-[#daa520]" href="#">
                        <i class="fab fa-facebook-f">
                        </i>
                    </a>
                    <a aria-label="LinkedIn" class="hover:text-[#daa520]" href="#">
                        <i class="fab fa-linkedin-in">
                        </i>
                    </a>
                    <a aria-label="YouTube" class="hover:text-[#daa520]" href="#">
                        <i class="fab fa-youtube">
                        </i>
                    </a>
                    <a aria-label="Instagram" class="hover:text-[#daa520]" href="#">
                        <i class="fab fa-instagram">
                        </i>
                    </a>
                </div>
            </div>
            <div>
                <h3 class="text-[#ddb25a] font-semibold mb-3">
                    Trang
                </h3>
                <ul class="space-y-2 text-white">
                    <li>
                        <a class="hover:text-[#ddb25a] focus:text-[#ddb25a] focus:outline-none" href="#">
                            Trang chủ
                        </a>
                    </li>
                    <li>
                        <a class="hover:text-[#ddb25a] focus:text-[#ddb25a] focus:outline-none" href="#">
                            Về chúng tôi
                        </a>
                    </li>
                    <li>
                        <a class="hover:text-[#ddb25a] focus:text-[#ddb25a] focus:outline-none" href="#">
                            Mua sắm
                        </a>
                    </li>
                </ul>
            </div>
            <div>
                <h3 class="text-[#ddb25a] font-semibold mb-3">
                    Cửa hàng của chúng tôi
                </h3>
                <ul class="space-y-2 text-white">
                    <li>
                        Chính sách bảo mật
                    </li>
                    <li>
                        Điều khoản và Điều kiện
                    </li>
                    <li>
                        Trung tâm hỗ trợ
                    </li>
                </ul>
            </div>
            <div>
                <h3 class="text-[#ddb25a] font-semibold mb-3">
                    Liên hệ
                </h3>
                <address class="not-italic space-y-2 text-white">
                    <p>
                        Số 5, đường Cầu Giấy, Quan Hoa, Hà Nội
                    </p>
                    <p>
                        daobliss@gmail.com
                    </p>
                    <p>
                        034 356 4378
                    </p>
                </address>
            </div>
        </div>
    </footer>
</body>
</html>