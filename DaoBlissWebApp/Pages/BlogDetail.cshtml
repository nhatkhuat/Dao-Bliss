@page "{slug}"
@model DaoBlissWebApp.Pages.BlogDetailModel
@{
    ViewData["Title"] = "Bài viết";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div id="blog-detail" class="px-4 py-12 bg-yellow-50">
    <div class="max-w-4xl mx-auto">
        <a class="flex items-center gap-2 text-primary hover:underline mb-6" asp-page="Blogs">
            <div class="w-4 h-4 flex items-center justify-center">
                <i class="ri-arrow-left-line"></i>
            </div>
            <span>Quay lại danh sách</span>
        </a>

        <article>
            <div class="mb-8">
                <img id="detail-hero-image" src="@Model.Article.ImageUrl" alt="@Model.Article.Title" class="w-full h-80 object-cover rounded-lg">
            </div>

            <div class="mb-6">
                <h1 id="detail-title" class="text-3xl font-bold text-gray-900 mb-4">@Model.Article.Title</h1>
                <div class="flex items-center gap-6 text-sm text-gray-500">
                    <div class="flex items-center gap-2">
                        <div class="w-4 h-4 flex items-center justify-center">
                            <i class="ri-calendar-line"></i>
                        </div>
                        <span>@Model.Article.CreatedAt.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("vi-VN"))</span>
                    </div>
                </div>
            </div>

            <div id="detail-content" class="prose prose-lg max-w-none">
                @Html.Raw(Model.Article.Content)
            </div>
        </article>
