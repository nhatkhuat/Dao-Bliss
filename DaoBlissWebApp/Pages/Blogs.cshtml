@page
@model DaoBlissWebApp.Pages.BlogsModel
@{
    ViewData["Title"] = "Bài viết";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="relative h-96 bg-cover bg-center"
         style="background-image: url('https://res.cloudinary.com/dsvasaqr8/image/upload/1393fe4f1d5719e32432aa43563db0da_umshhe.jpg');">
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 flex items-center justify-center h-full text-center text-white">
        <div>
            <h1 class="text-5xl font-bold mb-4 shadow-md" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Câu chuyện văn hóa</h1>
            <p class="text-xl font-semibold shadow-md" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Nơi giữ gìn, phát triển, lan tỏa bản sắc dân tộc</p>
        </div>
    </div>
</section>

<div id="blog-list" class="px-4 py-12 bg-yellow-50">
    <div class="max-w-6xl mx-auto">
        <div class="space-y-12">
            @for (int i = 0; i < Model.Articles.Count; i++)
            {
                var article = Model.Articles[i];
                var isReverse = i % 2 != 0;
                <article class="flex flex-col @if(isReverse) { @:lg:flex-row-reverse
                } else { @:lg:flex-row
                } gap-8 items-start">
                    <div class="lg:w-1/3">
                        <img src="@article.ImageUrl" alt="@article.Title" class="w-full h-64 object-cover rounded-lg">
                    </div>
                    <div class="lg:w-2/3">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">@article.Title</h2>
                        <p class="text-gray-600 mb-4 leading-relaxed line-clamp-5">@article.Summary</p>
                        <a asp-page="BlogDetail" asp-route-slug="@article.Slug" class="text-green-700 font-medium hover:underline">Đọc thêm</a>
                    </div>
                </article>
            }
            @if (!Model.Articles.Any())
            {
                <p class="text-center text-gray-500">Không có bài viết nào.</p>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="flex justify-center mt-12">
                <div class="flex items-center gap-2">
                    <a asp-page="/Blogs" asp-route-pageIndex="@(Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1)" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm hover:border-blue-500 @(Model.CurrentPage == 1 ? "pointer-events-none opacity-50" : "")">
                        <i class="ri-arrow-left-s-line text-black"></i>
                    </a>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <a asp-page="/Blogs" asp-route-pageIndex="@i"
                           class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm
          @(Model.CurrentPage == i ? "bg-green-700 text-white" : "text-gray-900 hover:text-blue-600")">
                            @i
                        </a>

                    }
                    <a asp-page="/Blogs" asp-route-pageIndex="@(Model.CurrentPage < Model.TotalPages ? Model.CurrentPage + 1 : Model.TotalPages)" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm hover:border-blue-500 @(Model.CurrentPage == Model.TotalPages ? "pointer-events-none opacity-50" : "")">
                        <i class="ri-arrow-right-s-line text-black"></i>
                    </a>
                    <a asp-page="/Blogs" asp-route-pageIndex="@Model.TotalPages" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded text-sm hover:border-blue-500 @(Model.CurrentPage == Model.TotalPages ? "pointer-events-none opacity-50" : "")">
                        <i class="ri-skip-right-line text-black"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
