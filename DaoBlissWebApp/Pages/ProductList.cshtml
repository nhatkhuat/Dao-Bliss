@page
@model DaoBlissWebApp.Pages.ProductListModel
@{ViewData["Title"] = "Về chúng tôi";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    }
    <html lang="vi">
        <head>
            <meta charset="utf-8" />
            <meta content="width=device-width, initial-scale=1" name="viewport" />
            <title>
                DaoBliss Mua sắm
            </title>
            <script src="https://cdn.tailwindcss.com">
            </script>
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
            <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&amp;family=Roboto&amp;display=swap" rel="stylesheet" />
            <style>
                body {
                    font-family: 'Roboto', sans-serif;
                }

                .font-playfair {
                    font-family: 'Playfair Display', serif;
                }
                /* Custom scrollbar hidden for cleaner look */
                ::-webkit-scrollbar {
                    display: none;
                }
            </style>
            <script src="https://cdn.botpress.cloud/webchat/v3.2/inject.js" defer></script>
            <script src="https://files.bpcontent.cloud/2025/07/11/08/20250711083358-FVA851WT.js" defer></script>

        </head>
    <body class="bg-white text-[#1f3a2f]">
        

        <!-- Hero section -->
        <section aria-label="Banner Mua sắm" class="relative w-full h-48 sm:h-56 md:h-64 lg:h-72 xl:h-80 2xl:h-96">
            <img alt="Bình thủy tinh chứa tinh dầu spa và đá massage đặt trên bàn gỗ, ánh sáng dịu nhẹ"
                 class="w-full h-full object-cover object-center brightness-75 blur-sm" height="320" loading="lazy"
                 src="/img/banner.png" width="1920" />
            <div class="absolute inset-0 flex flex-col justify-center items-center text-white text-center px-4">
                <h1 class="font-playfair text-4xl sm:text-5xl md:text-6xl leading-tight drop-shadow-md">
                    Mua sắm
                </h1>
                <p class="mt-2 text-lg sm:text-xl md:text-2xl drop-shadow-md">
                    Hãy lựa chọn sự thoải mái cho bạn và người thân
                </p>
            </div>
        </section>
        <!-- Filter section -->
        <section aria-label="Bộ lọc sản phẩm" class="bg-gradient-to-b from-[#1f3a2f] via-[#1f3a2f]/70 to-white py-6">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row justify-center sm:justify-between items-center gap-4 sm:gap-0 text-[#1f3a2f] text-lg font-normal">
                <div class="flex items-center space-x-2">
                    <label class="select-none" for="category">
                        Phân loại:
                    </label>
                    <select class="rounded-full border border-[#a06f1a] text-[#7a6a5a] text-sm py-1 px-3 focus:outline-none focus:ring-2 focus:ring-[#a06f1a] focus:border-[#a06f1a]" id="category" name="category">
                        <option>
                            Tất cả
                        </option>
                        <option>
                            Cao tắm
                        </option>
                    <option>
                        Xà phòng
                    </option>
                        <option>
                            Bộ quà tặng
                        </option>
                    </select>
                </div>
                <div class="flex items-center space-x-2">
                    <label class="select-none" for="price">
                        Giá:
                    </label>
                    <select class="rounded-full border border-[#a06f1a] text-[#7a6a5a] text-sm py-1 px-3 focus:outline-none focus:ring-2 focus:ring-[#a06f1a] focus:border-[#a06f1a]" id="price" name="price">
                        <option>
                            Tăng dần
                        </option>
                        <option>
                            Giảm dần
                        </option>
                    </select>
                </div>
            </div>
        </section>
        <!-- Products grid -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <ul aria-label="Danh sách sản phẩm" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                <!-- Repeat 6 products -->
                <form asp-page="productDetail" method="post">
                <li class="bg-white rounded-md shadow-sm p-4 flex flex-col" role="listitem" tabindex="0">
                    <img alt="Bộ sản phẩm DaoBliss gồm hai lọ thủy tinh có nắp tre màu vàng, nhãn xanh lá cây, đặt trên nền sáng" class="w-full h-full object-cover rounded-md mb-3" height="200" loading="lazy" src="~/img/product.png" width="300" />
                    <h2 aria-label="Tên sản phẩm" class="font-playfair text-lg text-[#1f3a2f] mb-1">
                        Cao tắm cô đặc
                    </h2>
                    <p aria-label="Mô tả sản phẩm" class="text-[#7a6a5a] text-sm mb-1">
                    Công thức được chiết xuất từ
                    phương pháp tắm truyền thống của người Dao Đỏ
                    với hơn 20 loại thảo mộc rừng quý hiếm.
                    </p>
                    <p aria-label="Giá sản phẩm" class="text-[#1f3a2f] font-normal text-base mb-3">
                        150.000 VNĐ
                    </p>
                    <div class="flex space-x-3">
                        <button aria-label="Thêm vào giỏ hàng" class="flex items-center justify-center gap-1 rounded-full border border-[#a06f1a] bg-[#a06f1a]/50 text-[#f9f5f0] text-xs font-semibold py-1 px-3 hover:bg-[#a06f1a] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Thêm vào
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>

                        <button type="submit" aria-label="Mua ngay" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] text-xs font-semibold py-1 px-5 hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Mua ngay
                        </button>

                    </div>
                </li>
                </form>
                <li class="bg-white rounded-md shadow-sm p-4 flex flex-col" role="listitem" tabindex="0">
                    <img alt="Bộ sản phẩm DaoBliss gồm hai lọ thủy tinh có nắp tre màu vàng, nhãn xanh lá cây, đặt trên nền sáng" class="w-full h-full object-cover rounded-md mb-3" height="200" loading="lazy" src="/img/soap.png" width="300" />
                    <h2 aria-label="Tên sản phẩm" class="font-playfair text-lg text-[#1f3a2f] mb-1">
                        Xà phòng thảo dược
                    </h2>
                    <p aria-label="Mô tả sản phẩm" class="text-[#7a6a5a] text-sm mb-1">
                    Công thức được chiết xuất từ các loại thảo mộc truyền thống như nghệ, gừng, quế, lá sả và cam thảo, kết hợp với dầu dừa nguyên chất, glycerin thực vật và tinh dầu tự nhiên.
                    </p>
                    <p aria-label="Giá sản phẩm" class="text-[#1f3a2f] font-normal text-base mb-3">
                        80.000 VNĐ
                    </p>
                    <div class="flex space-x-3">
                        <button aria-label="Thêm vào giỏ hàng" class="flex items-center justify-center gap-1 rounded-full border border-[#a06f1a] bg-[#a06f1a]/50 text-[#f9f5f0] text-xs font-semibold py-1 px-3 hover:bg-[#a06f1a] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Thêm vào
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>
                        <button aria-label="Mua ngay" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] text-xs font-semibold py-1 px-5 hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Mua ngay
                        </button>
                    </div>
                </li>
                <li class="bg-white rounded-md shadow-sm p-4 flex flex-col" role="listitem" tabindex="0">
                    <img alt="Bộ sản phẩm DaoBliss gồm hai lọ thủy tinh có nắp tre màu vàng, nhãn xanh lá cây, đặt trên nền sáng" class="w-full h-full object-cover rounded-md mb-3" height="200" loading="lazy" src="~/img/footbag.png" width="300" />
                    <h2 aria-label="Tên sản phẩm" class="font-playfair text-lg text-[#1f3a2f] mb-1">
                    Túi lọc ngâm chân thảo dược
                    </h2>
                    <p aria-label="Mô tả sản phẩm" class="text-[#7a6a5a] text-sm mb-1">
                    Hỗn hợp thảo dược truyền thống này bao gồm gừng khô, quế dại,
                    cây kim ngân, lá sả, bạc hà, lá lốt,
                    ngải cứu, hoắc hương, và rau má, cùng nhiều loại khác.
                    </p>
                    <p aria-label="Giá sản phẩm" class="text-[#1f3a2f] font-normal text-base mb-3">
                        150.000 VNĐ
                    </p>
                    <div class="flex space-x-3">
                        <button aria-label="Thêm vào giỏ hàng" class="flex items-center justify-center gap-1 rounded-full border border-[#a06f1a] bg-[#a06f1a]/50 text-[#f9f5f0] text-xs font-semibold py-1 px-3 hover:bg-[#a06f1a] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Thêm vào
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>
                        <button aria-label="Mua ngay" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] text-xs font-semibold py-1 px-5 hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Mua ngay
                        </button>
                    </div>
                </li>
                <li class="bg-white rounded-md shadow-sm p-4 flex flex-col" role="listitem" tabindex="0">
                    <img alt="Bộ sản phẩm DaoBliss gồm hai lọ thủy tinh có nắp tre màu vàng, nhãn xanh lá cây, đặt trên nền sáng" class="w-full h-full object-cover rounded-md mb-3" height="200" loading="lazy" src="~/img/smallgift.png" width="300" />
                    <h2 aria-label="Tên sản phẩm" class="font-playfair text-lg text-[#1f3a2f] mb-1">
                    Bộ quà tặng DaoBliss 1
                    </h2>
                    <p aria-label="Mô tả sản phẩm" class="text-[#7a6a5a] text-sm mb-1">
                    Những món quà này được đóng gói trong bao bì trang nhã, tạo nên sự kết nối ý nghĩa giữa sản phẩm và tinh thần biết ơn đối với người dùng.
                    </p>
                    <p aria-label="Giá sản phẩm" class="text-[#1f3a2f] font-normal text-base mb-3">
                        239.000 VNĐ
                    </p>
                    <div class="flex space-x-3">
                        <button aria-label="Thêm vào giỏ hàng" class="flex items-center justify-center gap-1 rounded-full border border-[#a06f1a] bg-[#a06f1a]/50 text-[#f9f5f0] text-xs font-semibold py-1 px-3 hover:bg-[#a06f1a] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Thêm vào
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>
                        <button aria-label="Mua ngay" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] text-xs font-semibold py-1 px-5 hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Mua ngay
                        </button>
                    </div>
                </li>
                <li class="bg-white rounded-md shadow-sm p-4 flex flex-col" role="listitem" tabindex="0">
                    <img alt="Bộ sản phẩm DaoBliss gồm hai lọ thủy tinh có nắp tre màu vàng, nhãn xanh lá cây, đặt trên nền sáng" class="w-full h-full object-cover rounded-md mb-3" height="200" loading="lazy" src="~/img/largegift.png" width="300" />
                    <h2 aria-label="Tên sản phẩm" class="font-playfair text-lg text-[#1f3a2f] mb-1">
                    Bộ quà tặng DaoBliss 2
                    </h2>
                    <p aria-label="Mô tả sản phẩm" class="text-[#7a6a5a] text-sm mb-1">
                    Những món quà này được đóng gói trong bao bì trang nhã, tạo nên sự kết nối ý nghĩa giữa sản phẩm và tinh thần biết ơn đối với người dùng.
                    </p>
                    <p aria-label="Giá sản phẩm" class="text-[#1f3a2f] font-normal text-base mb-3">
                        393.000 VNĐ
                    </p>
                    <div class="flex space-x-3">
                        <button aria-label="Thêm vào giỏ hàng" class="flex items-center justify-center gap-1 rounded-full border border-[#a06f1a] bg-[#a06f1a]/50 text-[#f9f5f0] text-xs font-semibold py-1 px-3 hover:bg-[#a06f1a] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Thêm vào
                            <i class="fas fa-shopping-cart">
                            </i>
                        </button>
                        <button aria-label="Mua ngay" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] text-xs font-semibold py-1 px-5 hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                            Mua ngay
                        </button>
                    </div>
                </li>
                
            </ul>
            <!-- Pagination -->
            <nav aria-label="Phân trang" class="mt-8 flex justify-center items-center space-x-3 text-[#1f3a2f] text-lg font-normal">
                <span>
                    Trang:
                </span>
                <button aria-label="Trang đầu" class="rounded-full bg-[#d9d9d9] text-[#7a7a7a] w-8 h-8 flex items-center justify-center cursor-not-allowed" disabled="">
                    «
                </button>
                <button aria-label="Trang trước" class="rounded-full bg-[#d9d9d9] text-[#7a7a7a] w-8 h-8 flex items-center justify-center cursor-not-allowed" disabled="">
                    ‹
                </button>
                <span aria-current="page" class="font-semibold select-none">
                    01/02
                </span>
                <button aria-label="Trang kế tiếp" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] w-8 h-8 flex items-center justify-center hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                    ›
                </button>
                <button aria-label="Trang cuối" class="rounded-full bg-[#1f3a2f] text-[#f9f5f0] w-8 h-8 flex items-center justify-center hover:bg-[#3f5a4f] focus:outline-none focus:ring-2 focus:ring-[#a06f1a]">
                    »
                </button>
            </nav>
        </main>
        
    </body>
</html>



