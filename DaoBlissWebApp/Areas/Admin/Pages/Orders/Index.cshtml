@page
@model DaoBlissWebApp.Areas.Admin.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "QUản lý đơn hàng";
}

<div class="flex h-screen">
    <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-gray-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out">
        <div class="flex items-center gap-3 px-6 py-4 border-b border-gray-200">
            <div class="w-8 h-8 flex items-center justify-center">
                <i class="ri-leaf-line text-xl text-secondary"></i>
            </div>
            <span class="font-['Pacifico'] text-xl text-primary">DaoBliss</span>
        </div>

        <nav class="mt-6">
            <div class="px-6 mb-2">
                <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Quản lý</span>
            </div>
            <ul class="space-y-1 px-3">
                <li>
                    <a asp-area="Admin" asp-page="/Dashboard/Index" class="nav-item active flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-dashboard-line"></i>
                        </div>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Orders/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-file-list-line"></i>
                        </div>
                        Đơn hàng
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Products/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-shopping-bag-line"></i>
                        </div>
                        Sản phẩm
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Categories/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-folder-line"></i>
                        </div>
                        Danh mục
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Articles/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-article-line"></i>
                        </div>
                        Bài viết
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/ProductSizes/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-ruler-line"></i>
                        </div>
                        Kích thước SP
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/ProductImages/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-image-line"></i>
                        </div>
                        Hình ảnh SP
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <div class="flex-1 lg:ml-64">
        <header class="bg-white border-b border-gray-200 px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <button id="sidebar-toggle" class="lg:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-menu-line"></i>
                        </div>
                    </button>
                    <h1 class="text-xl font-semibold text-gray-900">Dashboard</h1>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <button class="p-2 rounded-lg text-gray-600 hover:bg-gray-100">
                            <div class="w-5 h-5 flex items-center justify-center">
                                <i class="ri-notification-line"></i>
                            </div>
                        </button>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
                            <span class="text-white text-sm font-medium">A</span>
                        </div>
                        <span class="text-sm font-medium text-gray-700">Admin</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="p-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <strong class="font-bold">Thành công! </strong>
                    <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                </div>
            }
            <div id="orders" class="page-content">
                <div class="bg-white rounded-lg border border-gray-200 mb-6">
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                            <div class="flex-1 max-w-md">
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <div class="w-4 h-4 flex items-center justify-center">
                                            <i class="ri-search-line text-gray-400 text-sm"></i>
                                        </div>
                                    </div>
                                    <input type="text" placeholder="Tìm kiếm đơn hàng..." class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                </div>
                            </div>
                            <div class="flex flex-wrap items-center gap-3">
                                <select class="custom-select px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent pr-8">
                                    <option value="">Tất cả trạng thái</option>
                                    <option value="pending">Đang chờ</option>
                                    <option value="processing">Đang xử lý</option>
                                    <option value="shipping">Đang giao</option>
                                    <option value="completed">Hoàn thành</option>
                                    <option value="cancelled">Đã hủy</option>
                                </select>
                                <button class="px-4 py-2 text-sm text-gray-600 hover:text-gray-900 border border-gray-300 rounded-button hover:bg-gray-50 whitespace-nowrap">
                                    Xuất Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã đơn</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng tiền</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đặt</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @if (Model.Orders.Count > 0)
                                {
                                    @foreach (Order item in Model.Orders)
                                    {
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#@item.OrderNumber</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div>
                                                    <div class="text-sm font-medium text-gray-900">@item.ShippingFullName</div>
                                                    <div class="text-sm text-gray-500">@item.ShippingPhoneNumber</div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.Total.ToString("c0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                @{
                                                    var statusMap = new Dictionary<string, (string Text, string Css)>
                                                                                                                                                                                                                                    {
{ "Pending", ("Chờ xử lý", "bg-yellow-100 text-yellow-800") },
{ "Processing", ("Đang đóng hàng", "bg-blue-100 text-blue-800") },
{ "Shipped", ("Đã giao hàng", "bg-green-100 text-green-800") },
{ "Completed", ("Hoàn tất", "bg-teal-100 text-teal-800") },
{ "Cancelled", ("Hủy đơn", "bg-red-100 text-red-800") },
{ "Returned", ("Hoàn hàng", "bg-orange-100 text-orange-800") }
};
                                                    var status = item.Status;
                                                    var (statusText, statusClass) = statusMap.ContainsKey(status)
                                                        ? statusMap[status]
                                                        : ("Không xác định", "bg-gray-100 text-gray-800");
                                                }
                                                <span class="px-2 py-1 text-xs font-medium rounded-full @statusClass">@statusText</span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center gap-2">
                                                    <a asp-page="./Details" asp-route-id="@item.OrderNumber" class="button p-1 text-gray-400 hover:text-primary view-order">
                                                        <div class="w-4 h-4 flex items-center justify-center">
                                                            <i class="ri-eye-line"></i>
                                                        </div>
                                                    </a>
                                                    <a asp-page="./Edit" asp-route-id="@item.OrderNumber" class="button p-1 text-gray-400 hover:text-primary edit-order">
                                                        <div class="w-4 h-4 flex items-center justify-center">
                                                            <i class="ri-edit-line"></i>
                                                        </div>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>Chưa có đơn hàng nào</tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>


