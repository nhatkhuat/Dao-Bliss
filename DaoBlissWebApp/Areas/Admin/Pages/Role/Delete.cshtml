@page "/admin/delete-role/{roleid}"
@model DaoBlissWebApp.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Delete role";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p>Are you sure to delete role <strong>@Model.Role.Name</strong>?</p>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">Role list</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    @*<partial name="_ValidationScriptsPartial" />*@
}