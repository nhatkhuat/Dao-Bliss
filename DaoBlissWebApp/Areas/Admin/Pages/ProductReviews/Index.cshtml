@page
@model DaoBlissWebApp.Areas.Admin.Pages.ProductReviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductReview[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductReview[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductReview[0].IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductReview[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductReview[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductReview[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductReview) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
