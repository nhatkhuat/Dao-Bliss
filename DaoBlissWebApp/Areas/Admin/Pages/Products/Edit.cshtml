@page
@model DaoBlissWebApp.Areas.Admin.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <span class="text-red-500 text-sm">*</span>
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="form-group">
                <span class="text-red-500 text-sm">*</span>
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Product.CategoryId" class="text-red-500 text-sm"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Product.IsActive" /> @Html.DisplayNameFor(model => model.Product.IsActive)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="DescriptionModel.Mota" class="control-label">Mô tả</label>
                <input asp-for="DescriptionModel.Mota" class="form-control" />
                <span asp-validation-for="DescriptionModel.Mota" class="text-red-500 text-sm" required></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Slug" class="control-label">Slug</label>
                <input asp-for="Product.Slug" class="form-control" />
                <span asp-validation-for="Product.Slug" class="text-red-500 text-sm" required></span>
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium mb-1">Công dụng</label>
                <textarea asp-for="DescriptionModel.CongDung" class="w-full border rounded p-2" required></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1">Thành phần</label>
                <textarea asp-for="DescriptionModel.ThanhPhan" class="w-full border rounded p-2" required></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1">Cách sử dụng</label>
                <textarea asp-for="DescriptionModel.CachSuDung" class="w-full border rounded p-2" required></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1">Lưu ý khi sử dụng</label>
                <textarea asp-for="DescriptionModel.LuuY" class="w-full border rounded p-2" required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
