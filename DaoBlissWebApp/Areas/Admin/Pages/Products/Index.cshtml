@page
@model DaoBlissWebApp.Areas.Admin.Pages.Products.IndexModel
@using DaoBlissWebApp.Common.Entities
@using System.Text.Json
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].IsActive)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {

            string desc = "";
            if (!string.IsNullOrEmpty(item.Description) && item.Description.TrimStart().StartsWith("{"))
            {
                try
                {
                    var parsed = JsonSerializer.Deserialize<ProductDescription>(item.Description);
                    desc = parsed?.Mota ?? "";
                }
                catch
                {
                    desc = item.Description; // fallback: hiển thị text thuần nếu không parse được
                }
            }
            else
            {
                // Trường hợp cũ: vẫn để text thuần
                desc = item.Description;
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @desc
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @{
                        var image = item.Images.FirstOrDefault();
                    }
                    @if (image != null)
                    {
                        <img src="@image.ImageUrl" alt="@image.AltText" width="100" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
