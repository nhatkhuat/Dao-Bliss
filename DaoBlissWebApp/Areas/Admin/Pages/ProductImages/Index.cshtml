@page
@model DaoBlissWebApp.Areas.Admin.Pages.ProductImages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table style="margin-left:auto; margin-right:auto; text-align:center;">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage[0].AltText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage[0].IsMain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage[0].Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductImage) {
        <tr>
            <td>
                <img src="@item.ImageUrl" width="150" height="150" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
