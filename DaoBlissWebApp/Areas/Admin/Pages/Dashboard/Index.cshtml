@page
@model DaoBlissWebApp.Areas.Admin.Pages.Dashboard.IndexModel
@{
}

<div class="flex h-screen">
    <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-gray-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out">
        <div class="flex items-center gap-3 px-6 py-4 border-b border-gray-200">
            <div class="w-8 h-8 flex items-center justify-center">
                <i class="ri-leaf-line text-xl text-secondary"></i>
            </div>
            <span class="font-['Pacifico'] text-xl text-primary">DaoBliss</span>
        </div>

        <nav class="mt-6">
            <div class="px-6 mb-2">
                <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Quản lý</span>
            </div>
            <ul class="space-y-1 px-3">
                <li>
                    <a asp-area="Admin" asp-page="/Dashboard/Index" class="nav-item active flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-dashboard-line"></i>
                        </div>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Orders/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-file-list-line"></i>
                        </div>
                        Đơn hàng
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Products/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-shopping-bag-line"></i>
                        </div>
                        Sản phẩm
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Categories/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-folder-line"></i>
                        </div>
                        Danh mục
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/Articles/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-article-line"></i>
                        </div>
                        Bài viết
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/ProductSizes/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-ruler-line"></i>
                        </div>
                        Kích thước SP
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/ProductImages/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-image-line"></i>
                        </div>
                        Hình ảnh SP
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-page="/ProductReviews/Index" class="nav-item flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-image-line"></i>
                        </div>
                        Reviews
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <div class="flex-1 lg:ml-64">
        <header class="bg-white border-b border-gray-200 px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <button id="sidebar-toggle" class="lg:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100">
                        <div class="w-5 h-5 flex items-center justify-center">
                            <i class="ri-menu-line"></i>
                        </div>
                    </button>
                    <h1 class="text-xl font-semibold text-gray-900">Dashboard</h1>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <button class="p-2 rounded-lg text-gray-600 hover:bg-gray-100">
                            <div class="w-5 h-5 flex items-center justify-center">
                                <i class="ri-notification-line"></i>
                            </div>
                        </button>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
                            <span class="text-white text-sm font-medium">A</span>
                        </div>
                        <span class="text-sm font-medium text-gray-700">Admin</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
                <div class="bg-white rounded-lg border border-gray-200 p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Tổng đơn hàng</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.TotalOrders.ToString("N0")</p>
                        </div>
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <div class="w-6 h-6 flex items-center justify-center">
                                <i class="ri-shopping-bag-line text-blue-600"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center gap-2">
                        <span class="text-green-600 text-sm font-medium">@Model.TotalOrdersChange</span>
                        <span class="text-gray-500 text-sm">so với tháng trước</span>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Đang chờ xử lý</p>
                            <p class="text-2xl font-bold text-orange-600">@Model.PendingOrders.ToString("N0")</p>
                        </div>
                        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                            <div class="w-6 h-6 flex items-center justify-center">
                                <i class="ri-time-line text-orange-600"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Đang vận chuyển</p>
                            <p class="text-2xl font-bold text-blue-600">@Model.ShippingOrders.ToString("N0")</p>
                        </div>
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <div class="w-6 h-6 flex items-center justify-center">
                                <i class="ri-truck-line text-blue-600"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center gap-2">
                        <span class="text-green-600 text-sm font-medium">@Model.ShippingOrdersChange</span>
                        <span class="text-gray-500 text-sm">so với tuần trước</span>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Đã hoàn thành</p>
                            <p class="text-2xl font-bold text-green-600">@Model.CompletedOrders.ToString("N0")</p>
                        </div>
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                            <div class="w-6 h-6 flex items-center justify-center">
                                <i class="ri-check-line text-green-600"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center gap-2">
                        <span class="text-green-600 text-sm font-medium">@Model.CompletedOrdersChange</span>
                        <span class="text-gray-500 text-sm">so với tháng trước</span>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-600">Đã hủy</p>
                            <p class="text-2xl font-bold text-red-600">@Model.CancelledOrders.ToString("N0")</p>
                        </div>
                        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                            <div class="w-6 h-6 flex items-center justify-center">
                                <i class="ri-close-line text-red-600"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center gap-2">
                        <span class="text-red-600 text-sm font-medium">@Model.CancelledOrdersChange</span>
                        <span class="text-gray-500 text-sm">so với tháng trước</span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                <div class="lg:col-span-3 bg-white rounded-lg border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Đơn hàng mới nhất</h3>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã đơn</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng tiền</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thời gian</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @if (Model.LatestOrders.Count > 0)
                                {
                                    @foreach (var order in Model.LatestOrders)
                                    {
                                        string statusText = order.Status switch
                                        {
                                            "Pending" => "Đang chờ",
                                            "Shipping" => "Đang giao",
                                            "Completed" => "Hoàn thành",
                                            "Cancelled" => "Đã hủy",
                                            _ => order.Status
                                        };
                                        string statusClass = order.Status switch
                                        {
                                            "Pending" => "bg-orange-100 text-orange-800",
                                            "Shipping" => "bg-blue-100 text-blue-800",
                                            "Completed" => "bg-green-100 text-green-800",
                                            "Cancelled" => "bg-red-100 text-red-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                        string timeAgo = GetTimeAgo(order.CreatedAt);
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@order.OrderNumber</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@order.ShippingFullName</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@order.Total.ToString("c0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-2 py-1 text-xs font-medium rounded-full @statusClass">@statusText</span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@timeAgo</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                                <a asp-area="Admin" asp-page="/Orders/Edit" asp-route-id="@order.OrderNumber" class="text-blue-500 hover:text-blue-700">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">Không có đơn hàng nào.</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"></div>
@functions {
    private string GetTimeAgo(DateTime createdAt)
    {
        var now = DateTime.Now;
        var diff = now - createdAt;
        if (diff.TotalMinutes < 1) return "Vừa xong";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes} phút trước";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours} giờ trước";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays} ngày trước";
        return createdAt.ToString("dd/MM/yyyy HH:mm", new System.Globalization.CultureInfo("vi-VN"));
    }
}
