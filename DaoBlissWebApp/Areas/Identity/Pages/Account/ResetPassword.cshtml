@page "/reset-password"
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="w-full max-w-md mx-auto my-12">
    <div class="bg-white rounded-2xl shadow-lg p-8 space-y-6">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-green-800 mb-2">Đặt lại mật khẩu</h1>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="py-2">
                <div class="relative">
                    <input asp-for="Input.Email" required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                           placeholder="Nhập email của bạn" autocomplete="email" aria-required="true">
                    <div class="absolute right-3 top-1/2 transform -translate-y-1/2 w-5 h-5 flex items-center justify-center">
                        <i class="ri-mail-line text-gray-400"></i>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>
            </div>
            <div class="py-2">
                <div class="relative">
                    <input asp-for="Input.Password" required type="password" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                           placeholder="Mật khẩu" autocomplete="new-password" aria-required="true">
                    <div class="absolute right-3 top-1/2 transform -translate-y-1/2 w-5 h-5 flex items-center justify-center">
                        <i class="ri-lock-line text-gray-400"></i>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
                </div>
            </div>
            <div class="py-2">
                <div class="relative">
                    <input asp-for="Input.ConfirmPassword" required type="password" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                           placeholder="Nhập lại mật khẩu" autocomplete="new-password" aria-required="true">
                    <div class="absolute right-3 top-1/2 transform -translate-y-1/2 w-5 h-5 flex items-center justify-center">
                        <i class="ri-lock-line text-gray-400"></i>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>
            </div>
            <button type="submit" id="login-submit" class="w-full text-white bg-green-800 py-3 rounded-lg !rounded-button font-medium whitespace-nowrap hover:bg-green-800 transition-colors">
                Gửi
            </button>
        </form>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
