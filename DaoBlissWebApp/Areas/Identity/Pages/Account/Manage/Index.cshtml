@page "/user/profile"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="w-full px-4 sm:px-6 py-6 sm:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
            <partial name="_ManageNav" />
            <div class="flex-1">
                <form id="profile-form" method="post">
                    <div id="profile-section" class="profile-content bg-white rounded-lg shadow-sm border p-8">
                        <h2 class="text-xl font-semibold text-gray-900 mb-6">Thông tin tài khoản</h2>

                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Họ Tên *</label>
                                <input type="text" asp-for="Input.FirstName" placeholder="Nhập họ và tên." required
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.FirstName" class="text-red-500 text-sm"></span>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại *</label>
                                <input type="tel" asp-for="Input.PhoneNumber" placeholder="Nhập số điện thoại của bạn." required
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-sm"></span>
                            </div>
                            <div class="col-span-2">
                                <label class="block text-sm font-medium class=" form-control" text-gray-700 mb-2">Ngày sinh</label>
                                <input asp-for="Input.DateOfBirth" placeholder="NHập ngày sinh." type="date" max="@DateTime.Today.ToString("yyyy-MM-dd")"
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.DateOfBirth" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <div class="mt-6">
                            <label class="block text-sm font-medium text-gray-700 mb-3">Giới tính</label>
                            <div class="flex space-x-6">
                                <label class="flex items-center space-x-2 cursor-pointer">
                                    <div class="relative">
                                        <input type="radio" asp-for="Input.Gender" value="true">
                                    </div>
                                    <span class="text-sm text-gray-700">Nam</span>
                                </label>
                                <label class="flex items-center space-x-2 cursor-pointer">
                                    <div class="relative">
                                        <input type="radio" asp-for="Input.Gender" value="false">
                                    </div>
                                    <span class="text-sm text-gray-700">Nữ</span>
                                </label>
                                <span asp-validation-for="Input.Gender" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <div class="mt-8 text-center">
                            <button type="submit"
                                    class="bg-primary text-white px-8 py-2 rounded !rounded-button text-sm font-medium whitespace-nowrap hover:bg-green-800 transition-colors">
                                Cập nhật tài khoản
                            </button>
                        </div>
                    </div>
                </form>

