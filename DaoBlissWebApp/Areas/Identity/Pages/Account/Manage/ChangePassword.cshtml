@page "/user/changepassword"
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div class="w-full px-4 sm:px-6 py-6 sm:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
            <partial name="_ManageNav" />
            <div class="flex-1">
                <form id="change-password-form" method="post">
                    <div id="profile-section" class="profile-content bg-white rounded-lg shadow-sm border p-8">
                        <h2 class="text-xl font-semibold text-gray-900 mb-6">Đổi mật khẩu</h2>
                        <div class="grid grid-cols-1 gap-6">
                            <div>
                                <label asp-for="Input.OldPassword" class="form-label"></label>
                                <input type="text" asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu cũ."
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm"></span>
                            </div>
                            <div>
                                <label asp-for="Input.NewPassword" class="form-label"></label>
                                <input type="text" asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu mới."
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm"></span>
                            </div>
                            <div>
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input type="text" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu mới."
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <div class="mt-8 text-center">
                            <button type="submit"
                                    class="bg-primary text-white px-8 py-2 rounded !rounded-button text-sm font-medium whitespace-nowrap hover:bg-green-800 transition-colors">
                                Thay đổi mật khẩu
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
