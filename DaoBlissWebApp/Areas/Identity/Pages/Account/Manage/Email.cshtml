@page "/user/email"
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="w-full px-4 sm:px-6 py-6 sm:py-8">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
            <partial name="_ManageNav" />
            <div class="flex-1">
                <form id="email-form" method="post">
                    <div id="profile-section" class="profile-content bg-white rounded-lg shadow-sm border p-8">
                        <h2 class="text-xl font-semibold text-gray-900 mb-6">Thay đổi email</h2>

                        <div class="grid grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                <input type="text" asp-for="Email" disabled
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                            </div>
                            <div>
                                <label asp-for="Input.NewEmail" class="form-label"></label>
                                <input type="tel" asp-for="Input.NewEmail" placeholder="Nhập email mới"
                                       class="w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                <span asp-validation-for="Input.NewEmail" class="text-red-500 text-sm"></span>
                            </div>
                        </div>

                        <div class="mt-8 text-center">
                            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail"
                                    class="bg-primary text-white px-8 py-2 rounded text-sm font-medium whitespace-nowrap hover:bg-green-800 transition-colors">
                                Thay đổi email
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

